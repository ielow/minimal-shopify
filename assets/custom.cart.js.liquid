
$(document).ready(function(){
    	 $('form[action="/cart/add"]').submit(function(event){
    	 	event.preventDefault();
			 $.ajax('/cart/add.js',{
				 data:$(this).serialize(),
				 method:'POST',
				 header:{"Content-Type": "application/json"},
				 success:function(data){
					 alert(data);
			 	}
			 })
    	 })
})
